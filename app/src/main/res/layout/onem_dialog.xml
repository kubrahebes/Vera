<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fafafa"
    android:layout_gravity="center">
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
 android:layout_marginLeft="40dp"
    android:id="@+id/radio_group">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="1. Öncelikli"
        android:id="@+id/radio_btn_kirmizi"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/radio_btn_sari"
        android:text="2. Öncelikli"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/radio_btn_yesil"
        android:text="3. Öncelikli"
        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/radio_btn_dorduncu"
        android:text="4. Öncelikli"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/radio_btn_besinci"
        android:text="5. Öncelikli"
    />
</RadioGroup>

</RelativeLayout>