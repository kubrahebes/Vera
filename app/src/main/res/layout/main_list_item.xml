<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_konum"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/konum_tarih"

        />

    <TextView
        android:id="@+id/txt_saat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_konum"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:text="22:30"
        android:textColor="#292929"
        android:textSize="17sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txt_baslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="24dp"
        android:text="Alışveriş Listesi"
        android:textColor="#292929"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_konum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_baslik"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Şanmar"
        android:textColor="#292929"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/image_yapildi"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="23dp"

        android:background="@drawable/halka" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/image_tik"
        android:background="@drawable/tik"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="27dp"
        android:layout_marginTop="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
      android:layout_below="@id/txt_saat"
        android:background="#656667"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp">

    </View>
</RelativeLayout>